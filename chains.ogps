fac RAM;
fac CPU;
chain buf;
int max_buf = 20;
mark RAM;
mark CPU;
mark tobuf;
mark rej;

exitwhen(rejected > 10);
{{
inject("RAM Xact", 0, 0, 0, 1);
RAM: fac_enter(RAM);
wait(30, 6);
try(buf.length < max_buf);
{
	copy(4, tobuf);
	fac_leave(RAM);
	->> RAM;
}
tobuf: chain_enter(buf);

inject("CPU Xact", 0, 0, 0, 1);
CPU: try(buf.length > 0);
{
	fac_enter(CPU);
	chain_leave(buf, 1, rej);
	wait(10, 3);
	fac_leave(CPU);
	->| CPU, 0.95;
	chain_purge(buf, rej);
	->> CPU;
}

rej: reject(1);
}}
